# OpenAI API Configuration
OPENAI_API_KEY=your-openai-api-key-here
OPENAI_ORG_ID=

# Database Configuration (optional - for future persistence)
DATABASE_URL=

# Server Configuration
HOST=0.0.0.0
PORT=8000
DEBUG=false

# Logging Configuration
LOG_LEVEL=INFO

# Rate Limiting
RATE_LIMIT_REQUESTS=60
RATE_LIMIT_WINDOW=60

# Cache Configuration
CACHE_TTL=86400
CACHE_ENABLED=true

# API Configuration
MAX_QUESTION_LENGTH=5000
REQUEST_TIMEOUT=30
MAX_RETRIES=3

# CORS Configuration
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# Model Configuration
DEFAULT_MODELS=gpt-4-turbo,gpt-4o,gpt-4o-mini
SYNTHESIS_MODEL=gpt-5.2
